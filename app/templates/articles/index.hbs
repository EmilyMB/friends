<h1>Articles Index</h1>


<table class="primary">
  <thead>
    <tr>
      <th>Description</th>
      <th>Notes</th>
      <th>Borrowed since</th>
      <th {{action 'setShowReturned'}}>Show/Hide Returned</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each article in filteredResults}}
      {{articles/article-row
        article=article
        save='save'
        articleStates=possibleStates
      }}
    {{/each}}
  </tbody>
</table>
